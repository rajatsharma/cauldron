{
  "name": "cauldron",
  "version": "1.0.0",
  "author": "Rajat Sharma",
  "publisher": "rajatsharma",
  "license": "MIT",
  "scripts": {
    "dev": "vsbuild watch",
    "build": "vsbuild prepublish",
    "prepare": "yarn build && vsce package && code --install-extension ./*.vsix && rm -f ./*vsix"
  },
  "main": "out/extension.js",
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cauldron.hello"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cauldron.hello",
        "title": "Cauldron: Hello"
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vsce": "^2.6.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "config": "../config/"
  }
}
